{
    "manifest_version": 2,
    "name": "ix.io-syntax",
    "description": "ix.io - monokai syntax highlighter",
    "version": "1.1.1",
    "permissions": [
        "tabs",
        "<all_urls>",
        "storage",
        "http://*/*",
        "https://*/*"
    ],
    "content_scripts": [ 
        { 
            "all_frames": false, 
            "js": [ "ui/js/extension.js" ],
            "matches": [ 
                "*://ix.io/*" ,
                "*://sprunge.us/*"
            ],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        "ui/js/extension.js",
        "ui/js/libs.min.js",
        "ui/css/ixio.min.css",
        "ui/img/brown_papersq.png",
        "ui/img/school_book.png",
        "ui/img/pojoaque.jpg"
    ]
}